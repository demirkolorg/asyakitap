{
  "manifest_version": 3,
  "name": "AsyaKitap",
  "version": "1.0.0",
  "description": "Kitaplarınızı takip edin, ilerlemenizi kaydedin",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png"
    },
    "default_title": "AsyaKitap"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.kitapyurdu.com/*",
    "https://www.idefix.com/*",
    "https://www.amazon.com.tr/*",
    "https://www.goodreads.com/*",
    "https://www.dr.com.tr/*",
    "https://www.bkmkitap.com/*",
    "https://asyakitap.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.kitapyurdu.com/*",
        "https://www.idefix.com/*",
        "https://www.amazon.com.tr/*",
        "https://www.goodreads.com/*",
        "https://www.dr.com.tr/*",
        "https://www.bkmkitap.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
